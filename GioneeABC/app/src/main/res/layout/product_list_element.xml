<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/ripple_grey"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_icon_border"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/silver_circle" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/iv_icon_border"
        android:layout_alignLeft="@+id/iv_icon_border"
        android:layout_alignRight="@+id/iv_icon_border"
        android:layout_alignTop="@+id/iv_icon_border"
        android:layout_centerVertical="true"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/tvNewProduct"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@drawable/new_product"
        android:text="NEW"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/iv_icon_border"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/tv_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/iv_icon_border"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="@dimen/nav_element_size" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="25dp"
        android:background="@color/silver" />


</RelativeLayout>
