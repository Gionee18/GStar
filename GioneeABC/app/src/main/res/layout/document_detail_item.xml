<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@drawable/ripple_grey"
    android:padding="8dp">

    <com.gionee.gioneeabc.helpers.FontImageView
        android:id="@+id/ivDocIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="q"
        android:textColor="@color/colorPrimary"
        android:textSize="42sp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/ivDocIcon"
    android:layout_above="@+id/view"
    android:paddingTop="10dp"
    android:layout_centerVertical="true">
    <TextView
        android:id="@+id/tvDocName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginLeft="16dp"



        android:text="Home"
        android:textColor="@color/black"
        android:textSize="@dimen/nav_element_size" />
    <TextView
        android:id="@+id/tvlast_modified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/tvDocName"


        android:text="Last Modified:28/sept/2016"
        android:textColor="@color/black"
        android:textSize="@dimen/nav_element_size" />
    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"

        android:layout_below="@+id/tvlast_modified"


        android:text="Duration:20min"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/nav_element_size" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_doc_view"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:gravity="center"
            android:paddingLeft="10dp"

            android:paddingBottom="2dp"
            android:src="@drawable/youtube"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />
        <com.gionee.gioneeabc.helpers.FontImageView
            android:id="@+id/iv_doc_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:text="m"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="25dp"
        android:background="@color/silver" />


</RelativeLayout>